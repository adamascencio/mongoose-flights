<%- include('../partials/header') %>

<h2>Enter Your Flight Information</h2>
<form action="/flights" method="POST">
  <ul class="form-flx">
    <li>
      <label for="airline">Enter the Airline: 
        <select name="airline" id="airline">
          <option value="American">American</option>
          <option value="Southwest">Southwest</option>
          <option value="United">United</option>
        </select>
      </label>
    </li>
    <li>
      <label for="airport">Enter the Airport: 
        <select name="airport" id="airport">
          <option value="AUS">AUS</option>
          <option value="DFW">DFW</option>
          <option value="DEN" selected>DEN</option>
          <option value="LAX">LAX</option>
          <option value="SAN">SAN</option>
        </select>
      </label>
    </li>
    <li>
      <label for="flightNo">Enter the Flight Number: <input type="number" for="flightNo" name="flightNo"></label>
    </li>
    <li>
      <label for="departs">Enter your Departure Date: <input type="datetime-local" for="departs" name="departs"></label>
    </li>
  </ul>
  <button type="submit">ADD FLIGHT INFO</button>
</form>

<%- include('../partials/footer') %>